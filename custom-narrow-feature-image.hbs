{{!< default}}

<main class="site-main">
    {{#if @member}}
        {{#post}}
            {{> "content" width="narrow"}}
        {{/post}}

        {{#is "post"}}
            {{#if @custom.show_related_posts}}
                {{> "related-posts"}}
            {{/if}}

            {{#post}}
                {{> "comments"}}
            {{/post}}
        {{/is}}
    {{/if}}
</main>